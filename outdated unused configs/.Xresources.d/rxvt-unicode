! disabling scrollbar
URxvt.scrollBar:        false

! By default, when shell output appears the scrollback view will automatically 
!jump to the bottom of the buffer to display new output. If in cases where you 
!want to see previous output (e.g., compiler messages), set the following options 
! do not scroll with output
URxvt*scrollTtyOutput:	false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:	true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! disable the scrollback buffer for the secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! enabling perl extensions
URxvt.perl-ext-common:	default,matcher

! open links in the default web browser with the left mouse button
URxvt.url-launcher:	/usr/bin/xdg-open
URxvt.matcher.button:	1
! matching links colored with a chosen foreground or background color
URxvt.matcher.rend.0: Uline Bold fg3

! for the Ctrl+Shift bindings to work, a default binding needs to be disabled
!URxvt.iso14755: false
!URxvt.iso14755_52: false
